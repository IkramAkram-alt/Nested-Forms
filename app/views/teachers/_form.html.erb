<div class = "container">
  <div class = "row">
    <div class = "col-lg-12 mx-md auto">
     <div class= 'form-control'>
      <%= simple_form_for @teacher do |f| %>
        <%= f.input :t_name, label: 'Teacher Name' %>
          <%= f.input :t_type , label: 'Teacher Type'%>
          <%= f.input :t_age, collection: 20..65, label: 'Teacher Age' %>
          <%= f.association :department, label_method: :d_name, value_method: :id, include_blank: false %>
          <%= f.association :course, label_method: :c_name, value_method: :id, include_blank: false %>
          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>