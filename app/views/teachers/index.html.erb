<p style="color: green"><%= notice %></p>
<div class = "container">
  <div class = "row">
    <div class = "col-lg-12 mx-md auto">
      <h1> Teachers</h1>
      <div id='teacher_id'>
      <table class= 'table table-dark'>
        <thead>
          <tr>
            <th scope="col">Teacher Name</th>
            <th scope="col">Teacher Type </th>
            <th scope="col">Teacher Age </th>
            <th scope="col">Teacher Department </th>
             <th scope="col">Teacher offers Courses </th>
          </tr>
        </thead>
        <tbody>      
        <% @teachers.each do |teacher|%>
         <tr>
          <td><%= teacher.t_name%></td> 
          <td> <%= teacher.t_type%></td>
          <td> <%= teacher.t_age%></td>
          <td><%= teacher.department.d_name%></td> 
          <td><%= teacher.course.c_name%></td> 
         </tr>                  
        <% end %>
        </table>
      </div>
      <%=link_to 'Add Teacher', new_teacher_path %> |
       <%=link_to 'Assign Student', new_student_path %>
    </div>
  </div>
</div>